set -g fish_key_bindings fish_vi_key_bindings
set fish_greeting ""

set -U fish_user_paths /Library/Frameworks/Python.framework/Versions/3.7/bin $fish_user_paths
set -U fish_user_paths $HOME/.krew/bin $fish_user_paths
set -U fish_user_paths $HOME/go/bin $fish_user_paths
set -U fish_user_paths $HOME/bin $fish_user_paths

set -gx EDITOR /usr/local/bin/nvim
set -gx PAGER less -FiRswX
set -gx MANPAGER "sh -c 'col -bx | bat -l man -p'"

# catalina seems to force $SHELL to zsh even when user login shell is set to fish
set -gx SHELL /usr/local/bin/fish
